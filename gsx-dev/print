if [[ $# == 0 ]]; then
  echo   "
+------------------------------------------------------------------------------------+
|Syntax error: This command only accepts 1 argument, but $# arguments were provided   |
|Correct Syntax: 'install (package name)                                             |
+------------------------------------------------------------------------------------+
  "
  afplay ./storage/assets/error.mov
  else
    for var in "$@"
    do
      printf "$var"
      printf " "
    done
    echo ""
fi